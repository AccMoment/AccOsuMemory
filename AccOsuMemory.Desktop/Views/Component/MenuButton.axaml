    <Style Selector=":is(controls|MenuButton):pointerover">
        <Setter Property="Background" Value="Aquamarine"></Setter>
    </Style>
    
    <Style Selector=":is(controls|MenuButton)[IsSelect=true]">
        <Setter Property="Background" Value="Aquamarine"></Setter>
    </Style>
</Styles>
